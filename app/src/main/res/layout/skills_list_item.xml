<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView
        android:id="@+id/skillName"
        android:layout_width="0dp"
        android:layout_weight="@dimen/skill_name_weight"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/skillModifier"
        android:layout_width="0dp"
        android:layout_weight="@dimen/skill_modifier_weight"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="@dimen/skill_trained_weight"
        android:layout_height="wrap_content"
        android:gravity="center" >
        <CheckBox
            android:id="@+id/skillTrained"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <TextView
        android:id="@+id/skillValue"
        android:layout_width="0dp"
        android:layout_weight="@dimen/skill_value_weight"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal" />
</LinearLayout>